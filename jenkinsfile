pipeline{
    agent none
    // options {
    //     skipDefaultCheckout true
    // }
    stages{
        stage("checkout react repos from git"){
            agent any
            steps{
                git branch: 'dev', url: 'https://github.com/SuratSinghRawat/react-spring-mongo.git' 
                stash(name: 'reactcontainer', includes: 'dockerfile package.json', allowEmpty: true)       
            }
        }
        stage("Unstash and Packaging build"){           
            agent{ label 'jenkins-agent-nexus'}
            steps{
                unstash(name: 'reactcontainer')
                script{
                  dockerImage = docker.build imageName
                }

            }
        }
    }
}